---
import Layout from "../layouts/Layout.astro";
import { CommandKeyTrigger } from "@/components/AppCommand";
import SocialLinks from "@/components/SocialLinks";
import { TypingText } from "@/components/animate-ui/text/typing";
---

<Layout>
  <div
    class="relative z-10 h-full gap-4 pointer-events-none w-full flex justify-center items-center flex-col min-h-svh"
  >
    <TypingText
      className="text-4xl font-bold pointer-events-auto"
      text={["Cristian Granda", "@cristianbgp"]}
      cursor
      loop
      cursorClassName="h-9"
      holdDelay={5000}
      client:load
    />
    <SocialLinks client:load />
    <CommandKeyTrigger client:only />
  </div>
</Layout>
